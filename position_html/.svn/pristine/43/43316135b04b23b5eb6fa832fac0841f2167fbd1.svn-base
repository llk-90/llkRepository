#trapezoid {
    border-width:0 19px 20px 19px;
    border-style:none solid solid;
    border-color:transparent transparent #aa58e8;
    width:110px;
    height:0px;
    position: absolute;
    z-index:9999;
    transform: rotate(45deg);
    right:-14px;
    margin-top: 23px;
}
#trapezoid span{
    font-size:8px;
    color:white;
}

