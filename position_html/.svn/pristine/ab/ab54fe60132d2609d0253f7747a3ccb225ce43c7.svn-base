                                data: {
                                    PHONE: phoneNum.value,
                                    openId:openId
                                },
                                dataType: 'json',
                                type: 'post',
                                timeout: 10000,
                                success: function(data) {
                                    if (data.result == 'notexist') {
                                        //alert("用户不存在!");
                                        mui.toast("用户不存在!");
                                        issend = true;
                                        return;
                                    }
                                    if (data.result == 'success') {
                                        //alert("验证码发送成功!");
                                        mui.toast("验证码发送成功!");
                                        //verifyCode = data.verifyCode;
                                        for (var i = 1; i <= t; i++) {
                                        	window.setTimeout("update(" + i + "," + t + ")", i * 1000);
                                        }
                                    } else {
										if(data.result == '验证码已超过当日次数！'){
                                    		//alert("验证码已超过当日次数！");
                                    		mui.toast("验证码已超过当日次数！");
                                    	}else{
                                    		//alert("验证码发送失败!");
