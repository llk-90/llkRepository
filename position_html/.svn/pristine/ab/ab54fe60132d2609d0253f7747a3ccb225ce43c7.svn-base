			function sendMessage(t) {
				var openId = GetQueryString('openid');
                if (issend) {
                    if (phoneNum.value != "") {
                        if (!p1.test(phoneNum.value)) {
                            phoneNum.value = '';
                            plus.nativeUI.toast('请输入正确的手机号码');
                            phoneNum.focus();
                            return;
                        } else {
