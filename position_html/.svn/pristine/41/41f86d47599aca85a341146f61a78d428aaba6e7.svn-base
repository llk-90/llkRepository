<script>
    var openid;
	function getBasicInfo() {
        var url = location.search; //获取url中含"?"符后的字串
        if (url.indexOf("?") != -1) {
            var str = url.substr(1);
            var strs = str.split("&");
            $.each(strs, function(index,obj){
                var key = obj.split("=")[0];
                var value = obj.split("=")[1];
                if(key=="openid"){
                    openid = value;
                }else if(key=="uid"){
                    uid = value;
                }else if(key=="classId"){
                    classId = value;
				}else if(key=="usertype"){
                    usertype = value;
                }else if(key == "SchoolId"){
                	SchoolId = value;
                }else if(key == "author"){
                	author = value;
                }
            })

        }
    }
var uid;
var classId;
var usertype;
var SchoolId;
var author;
getBasicInfo();
//选中图片数量,用于限制图片上传数量
var imagenum=0;
//监听页面宽度
var width = $(window).width();
console.log(width);
function chooseImage(e){
	$(e).next().click();
};
//检查文件类型和大小
function checkFile(file) {
	var filetypes = [ ".jpg", ".png", ".gif", ".ps", ".jpeg" ];
	var filemaxsize = 1024 * 2;//2M 
	var flag = false;
	var size=Math.round(file.size * 100 / (1024 * 1024)) / 100;
	var type=file.name.substring(file.name.lastIndexOf(".")).toLowerCase();
	if (filetypes && filetypes.length > 0) {
		for (var i = 0; i < filetypes.length; i++) {
			if (filetypes[i] == type) {
				flag = true;
				break;
			}
		}
	}
	if(!flag){
		mui.toast("不接受此文件类型。");
		return false;
	}
	if (size > filemaxsize) {
        mui.toast("附件大小不能大于" + filemaxsize / 1024 + "M。");
		return false;
	}
	if (size <= 0) {
        mui.toast("附件大小不能为0M。");
		target.value = "";
		return false;
	}
	console.log("文件大小："+size+"M，文件类型："+type);
	return true;
}
//获取文件路径
function getObjectURL(file) {  
    var url = null;  
    if (window.createObjcectURL != undefined) {  
        url = window.createOjcectURL(file);  
    } else if (window.URL != undefined) {  
        url = window.URL.createObjectURL(file);  
    } else if (window.webkitURL != undefined) {  
        url = window.webkitURL.createObjectURL(file);  
    }  
    console.log(url);
    return url;  
} 
//图片预览
function showIllegalImage(e){
	var src="";
	$.each(e.files, function(index,obj){
		var isNext = checkFile(obj);
		if(isNext){
			imagenum++;
			if(imagenum>4){
			    return false;
			}
			var objURL = getObjectURL(obj);
		     src = src+'<div class="image" style="position:relative;height: auto;list-style-type: none; display: inline-block; width: 22.5%;margin:2% 1.2%;" touchstart="return false">'+
 			     '<img onclick="deletePic(this)" src="../../img/tongzhi/del.png" style="position: absolute;z-index: 99;width: 18px;top:0;right:0;">'+
			     '<img style="height:'+width/5.8+'px;width:'+width/5.8+'px;z-index:-1;" src="'+objURL+'">'+
		     '</div>';
			console.log(imagenum);
		}
	});
	if(src.length!=0){
		 $("#preview").css({"display":"block"});
		 $("#preview").append(src);
	}
	//长按图片删除
    /*mui("#preview").on("longtap",".image",function(){
        event.preventDefault();
        var that = $(this);
        that.children().first().css({"display":"inline"});
	});*/

}


function deletePic(e) {
    imagenum--;
    if(imagenum==0){
        $(e).parent().css({"display":"none"});
    }
    $(e).parent().remove();
}



function saveOneMoment(){
	var formData = new FormData($("#saveMoment")[0]);//表单id
	formData.append("uid",uid);
	formData.append("openid",openid);
	formData.append("classId",classId);
    formData.append("usertype",usertype);
    formData.append("SchoolId",SchoolId);
    var res = getRadioRes('rds');
    $('#saveButton').attr("disabled","disabled");
    var text = $("#textContent").val();
    if (null!= res && null!=$("#textContent").val()&&$("#textContent").val().trim()!=''){
        $.ajax({
            url: '/noticeMoment/addMoment.webapp' ,
            type: 'POST',
            data: formData,
            async: false,
            cache: false,
            contentType: false,
            processData: false,
            dataType : 'json',
            beforeSend: function () {
                $('#saveButton').attr("disabled","disabled");
            },
            complete: function () {
                $('#saveButton').attr("disabled","disabled");
            },
            success: function (data) {
                if(data.errMsg=="OK"){
                    mui.toast("发布成功");
                    window.location.href='tongzhiquan.html?openid='+openid+'&uid='+uid+'&classId='+classId+'&usertype='+usertype+'&SchoolId='+SchoolId;
                    $('#saveButton').attr("disabled","disabled");
                }else{
                    $('#saveButton').removeAttr("disabled");
                    mui.toast(data.errMsg);
                }
            }
        });
	} else {
        $('#saveButton').removeAttr("disabled");
        mui.toast("请填写标题及内容");
	}
}

function getRadioRes(className){
    var rdsObj = document.getElementsByClassName(className);
    var checkVal = null;
    for(i = 0; i < rdsObj.length; i++){
        if(rdsObj[i].checked){checkVal = rdsObj[i].value;}
    }
    return checkVal;
}
</script>

