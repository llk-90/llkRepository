<!DOCTYPE html>
<html>

	<head>
		<meta charset="utf-8">
		<title>姓别</title>
		<meta name="viewport" content="width=device-width, initial-scale=1,maximum-scale=1,user-scalable=no">
		<meta name="apple-mobile-web-app-capable" content="yes">
		<meta name="apple-mobile-web-app-status-bar-style" content="black">
        <script src="../../../js/config.js" type="text/javascript" charset="utf-8"></script>
		<!--标准mui.css-->
		<link rel="stylesheet" href="../../../css/mui.min.css">
		<link rel="stylesheet" type="text/css" href="../../../css/app.css"/>
		<link rel="stylesheet" href="//cdn.bootcss.com/weui/0.4.3/style/weui.min.css">
        <link rel="stylesheet" href="//cdn.bootcss.com/jquery-weui/0.8.0/css/jquery-weui.min.css">
		<style type="text/css">
			html,
            body {
                margin: 0;
                padding: 0;
                height: 100%;
            }
            body,
			.mui-content{
            	background-color: #FFFFFF;
            }
            .mui-input-group label {
                line-height: 30px;
            }
            .mui-input-row {
                height: 50px !important;
            }
            
            .mui-table-view-cell>span {
                float: left;
                display: block;
                height: 44px;
                line-height: 44px;
                margin-right: 10px;
            }
            
            .mui-radio input[type=radio]:checked:before {
                color: #197FEE;              
            }
            
             .mui-radio input[type=radio]:before {
                    line-height: 0;          
            }
            
            .btn {
                width: 96%;
                height: 50px;
                background-color: #197FEE;
                color: #FFFFFF;
                font-size: larger;
                margin-left: 2%;
                margin-top: 5%;
            }
		</style>
	</head>
	<body style="padding-top: 5%;">
		 <div class="mui-content">
            <form class="mui-input-group ">
                <ul id="radioGroup" class="mui-table-view">
                    <li class="mui-table-view-cell">
                        
                        <span>男</span>
                        <div class="mui-radio" style="float: right;margin-top: 10px;">
                            <input id="boy" name="radio" type="radio" value="1">
                        </div>
                    </li>
                    <li class="mui-table-view-cell">
                        
                        <span>女</span>
                        <div class="mui-radio" style="float: right;margin-top: 10px;">
                            <input id="girl" name="radio" type="radio" value="0">
                        </div>
                    </li>
                </ul>
            </form>
			<button id="btnSave" class="btn">保存</button>
        </div>
	</body>
	<script src="../../../js/mui.min.js"></script>
	<script src="../../../js/loginValidate.js" type="text/javascript" charset="utf-8"></script>
	<script src="//cdn.bootcss.com/jquery/1.11.0/jquery.min.js"></script>
    <script src="//cdn.bootcss.com/jquery-weui/0.8.0/js/jquery-weui.min.js"></script>
	<script>
		mui.init({
			swipeBack:true //启用右滑关闭功能
		});

			function getvalue(param) {
				var str = decodeURI(window.location.search);
				if(str.indexOf(param) != -1) {
					var pos_start = str.indexOf(param) + param.length + 1;
					var pos_end = str.indexOf("&", pos_start);
					if(pos_end == -1) {
						return str.substring(pos_start);
					} else {
						$.alert("没有此值~~");
					}
				}
			}
			
			if(getvalue('sex') == '男'){
				document.getElementById("boy").checked = true;
			}else if(getvalue('sex') == '女'){
				document.getElementById("girl").checked = true;
			}
			
			var new_sex = "";
			var chkObjs = document.getElementsByName("radio");
            
            var mask = mui.createMask();
			document.getElementById("btnSave").addEventListener('tap', function() {
				for (var i = 0; i < chkObjs.length; i++) {
                    if (chkObjs[i].checked) {
                            new_sex = chkObjs[i].value;
                    }
            	}
				mask.show();
				mui.ajax("/messageedit/updateStuInfo.webapp", {
					data: {
						sex: new_sex
					},
					dataType: 'json', 
					type: 'post', 
					timeout: 10000, 
					success: function(data) {
						if(data.msg == "success") {
							mask.close();
							$.alert("修改成功！" ,function(){
								window.history.back();
							});
							
						} else {
							$.alert("修改失败！");
						}
					},
					error: function(xhr, type, errorThrown) {
						$.alert("网络异常");
					}
				});
			});
	</script>
</html>